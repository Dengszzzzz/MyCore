<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hintTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝牙 提示："
        />

    <TextView
        android:id="@+id/bluetoothNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝牙 名称："
        />

    <TextView
        android:id="@+id/bluetoothNameTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝牙 名称-改："
        />

    <Button
        android:id="@+id/openBlueBoothBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启蓝牙"/>

    <Button
        android:id="@+id/searchBlueBoothBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索已匹配蓝牙设备"/>

    <Button
        android:id="@+id/searchBlueBoothBt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索其他蓝牙设备"/>

</LinearLayout>