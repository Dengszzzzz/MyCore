<resources>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <!--使用toolBar 需要使用没有actionBar的样式-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--通知栏(状态栏)等的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--App bar 的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--修改toolbar的Title颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--修改toolbar的subtitle颜色-->
        <item name="subtitleTextColor">@color/white</item>
        <!--全局 背景颜色-->
        <item name="android:windowBackground">@color/background</item>
        <!--解决textView全局大小写问题-->
        <item name="android:textAllCaps">false</item>
        <!-- toolbar中带动画效果的箭头，设置动画形式与箭头颜色 -->
       <!-- <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <!-- toolbar中menu的文字的颜色,并非溢出菜单的内容文字颜色 -->
        <item name="actionMenuTextColor">@color/white</item>
        <!--.修改Toolbar的menu折叠图标和NavigationIcon的颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="toolBarTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ToolBar菜单样式.-->
    <style name="popup_theme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--设置背景-->
        <item name="android:background">@android:color/white</item>
        <!--设置字体颜色-->
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
    </style>


    <style name="listDivider">
        <item name="android:listDivider">@drawable/shape_home_grid_bg</item>
    </style>

    <!--透明对话框 -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <!--对话框动画-->
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_from_bottom_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_from_bottom_anim</item>
    </style>

    <!--popwindow 动画-->
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <!-- 指定显示时的动画xml -->
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
        <!-- 指定消失时的动画xml -->
    </style>

</resources>
