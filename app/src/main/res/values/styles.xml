<resources>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--通知栏等的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--导航栏的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--全局 字体颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--全局 背景颜色-->
        <item name="android:windowBackground">@color/background</item>
        <!--解决textView全局大小写问题-->
        <item name="android:textAllCaps">false</item>
        <!-- toolbar中带动画效果的箭头，设置动画形式与箭头颜色 -->
       <!-- <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <!-- toolbar中menu的文字的颜色,并非溢出菜单的内容文字颜色 -->
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="toolBarTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="listDivider">
        <item name="android:listDivider">@drawable/shape_home_grid_bg</item>
    </style>

    <!--透明对话框 -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <!--对话框动画-->
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_from_bottom_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_from_bottom_anim</item>
    </style>

    <!--popwindow 动画-->
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <!-- 指定显示时的动画xml -->
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
        <!-- 指定消失时的动画xml -->
    </style>

</resources>
